{
  "compilerOptions": {
    /* Language & libraries */
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* Type-safety flags */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Module system — NodeNext everywhere */
    "module": "nodenext",
    "moduleResolution": "nodenext",

    /* Project structure */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },

    /* Extras that were already present */
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Explicitly tell TS to load both Node & Next declaration packs */
    "types": ["node", "next"],

    /* Let Next’s custom TS plugin keep doing its optimisations */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
